{
	
	"cmd": ["g++", "-lm", "-Wall", "-std=c++17", "-Wextra", "-O2", "-fwrapv", "-Wfloat-equal", "-Wconversion", "$file_name","-o", "${file_path}/$file_base_name.exe", "&", "start", "cmd eme", "${file_path}/$file_base_name.exe"],
                
	"encoding": "utf-8",
	"file_regex": "^(..[^:]*):([0-9]+):?([0-9]+)?:? (.*)$",
